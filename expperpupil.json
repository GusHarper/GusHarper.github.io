{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.2.json",
  "description": "Energy costs index",
    "title": {
     "text": [
      "Total Expenditure Per Pupil"
    ],
    "subtitle": "Adjusted Total Expenditure Per Pupil for all LA Maintained Schools, 2015 = Base (Source: HM Treasury).",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },

  "height": 300,
  "width": 400,
  "config": {
    "view": {"stroke": "transparent"}
  },

      "data": {
        "url": "https://raw.githubusercontent.com/GusHarper/GusHarper.github.io/main/PerPupilExpenditureFinal.csv"
      },
  
      "mark": {"type": "line", "color": "#50abe0", "point": "transparent"},
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "title": "Year",

          "axis": {
            "grid": false,
            "gridOpacity": 0.6,
            "ticks": false,
            "labelPadding": 5
    
          }
        },
        "y": {
          "field": "expenditure_real",
          "type": "quantitative",
          "title": "Expenditure Per Pupil (£)",
          "scale": {"domain": [5000,6000]},
          "axis": {
            "grid": true,
            "gridOpacity": 0.6,
            "ticks": false,
            "labelPadding": 5
          }
        
        },
       
        "strokeDash": {"field": "dash", "legend": null},
        "tooltip": [
          {
            "field": "Year",
            "type": "temporal",
            "title": "Date"
          },
          {
            "field": "expenditure_real", 
            "type": "quantitative", 
            "title": "Expenditure / Pupil (£)"
            }
        ]
      }
    }
  

