{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/GusHarper/GusHarper.github.io/main/GovernmentExpenditureFinal.csv"
  },
  "title": {
    "text": "UK Government Expenditure by Function ",
    "fontSize": 12,
    "anchor": "start",
    "subtitle": "% of Yearly Total Expenditure. Aggregate expenditure in Â£b (2015 levels). Source (HM Treasury)",
    "subtitleFontStyle":"Italic",
    "subtitleFontSize":10
  },
  "width": 400,
  "height": 300,
  
"transform":[
  {"calculate": "year(datum.Year)", "as": "year"},
  {"filter": "datum.year>=minyear"},
  {"filter": "datum.year<=maxyear"}
],

  "params": [    
      {"name":"minyear", "value":2002,
         "bind":{
           "input": "range",
           "min": 2002, 
           "max": 2018, 
           "step": 1,
           "name": "Start year:"}
      },

      {"name":"maxyear", "value":2021,
         "bind":{
           "input": "range",
           "min": 2005, 
           "max": 2021, 
           "step": 1,
           "name": "End year:"}
      }
    ],

  "mark": "area",
  "encoding": {
    "x": 
      {"field": "Year", 
      "type": "temporal", 
      "title": "Year"},

    "y":
      {"field": "Expenditure (%)", 
      "type": "quantitative", 
      "title": "Percent of Expenditure (%)",
      "scale": {"domain": [0,100]}},


    "color": {
      "field": "Area",
      "scale": {"scheme": "set3"},
      "legend": {
        "orient": "right",
        "title": "Function",
        "labelFontSize": 8,
        "titleFontSize": 12
        }
    },
    "tooltip": [
      {"field": "Area"},
      {"field": "Year", "formatType": "time", "format": "%Y"},
      {"field": "Expenditure (%)"},
      {"field": "Expenditure (Real)"}
    ]
  }
}